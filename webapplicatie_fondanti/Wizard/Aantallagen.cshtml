                <li><a href="~/Wizard/Bekleding.cshtml">Bekleding</a></li>
                <li><a href="~/Wizard/Allergieen.cshtml">Allergieën</a></li>
            </ul>
        </div>
    </nav>
    <form method="post" class="breed">
        <div class="col s3 row">
            Aantal lagen: (minimaal 15 personen per laag.)
            <div class="input-field inline">
                <input id="personen_inline" type="number" name="lagen" class="validate" min="1" required />
            </div>
            <input type="submit" name="submit" value="Volgende" />
        </div>
    </form>
    @helpers.wizard.type_cake_select(db)
</body>
</html>
