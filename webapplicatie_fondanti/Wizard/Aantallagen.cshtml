@{
    Session["lagen"] = Request.Form["lagen"];



    if (IsPost)
    {
        Response.Redirect("/Wizard/Thema.cshtml");
    }
    var db = new Db_Stuff.Mssql_Taarten_Data();
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @helpers.wizard.materialized_header()
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a href="#!" class="brand-logo center">Fondanti</a>
            <ul class="left hide-on-med-and-down">
                <li><a href="~/Wizard/Aantalpersonen.cshtml">Aantal personen</a></li>
                <li class="active"><a href="~/Wizard/Aantallagen.cshtml">Aantal lagen</a></li>
