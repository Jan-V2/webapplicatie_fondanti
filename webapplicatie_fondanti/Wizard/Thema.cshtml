@{
    if (IsPost)
    {
        Session["Thema"] = Request.Form["Thema"];
        Response.Redirect("/Wizard/Bekleding.cshtml");
    }
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @helpers.wizard.materialized_header()
</head>
<body>
    <form method="post" class="breed">
        @helpers.wizard.thema_selector()
        <div class="file-field input-field">
            <div class="btn">
                <span>File</span>
                <input type="file" multiple>
            </div>
            <div class="file-path-wrapper">
                @* File upload moet nog in een session *@
                <input class="file-path validate" type="text" placeholder="(Optioneel) Upload een foto ter inspiratie">
            </div>
        </div>
        <input type="submit" name="submit" value="Volgende" />


    </form>
</body>
</html>