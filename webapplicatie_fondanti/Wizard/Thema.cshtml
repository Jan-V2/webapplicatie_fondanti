@{
    if (IsPost)
    {
        Session["Thema"] = Request.Form["Thema"];
        Response.Redirect("/Wizard/Bekleding.cshtml");
    }
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @helpers.wizard.materialized_header()
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a href="#!" class="brand-logo center">Fondanti</a>
            <ul class="left hide-on-med-and-down">
                <li><a href="~/Wizard/Aantalpersonen.cshtml">Aantal personen</a></li>
                <li><a href="~/Wizard/Aantallagen.cshtml">Aantal lagen</a></li>
                <li class="active"><a href="~/Wizard/Thema.cshtml">Thema</a></li>
                <li><a href="~/Wizard/Bekleding.cshtml">Bekleding</a></li>
                <li><a href="~/Wizard/Allergieen.cshtml">Allergieën</a></li>
            </ul>
        </div>
    </nav>
    <form method="post" class="breed">
        @helpers.wizard.thema_selector()
        <div class="file-field input-field">
            <div class="btn">
                <span>File</span>
                <input type="file" multiple>
            </div>
            <div class="file-path-wrapper">
                @* File upload moet nog in een session *@
                <input class="file-path validate" type="text" placeholder="(Optioneel) Upload een foto ter inspiratie">
            </div>
        </div>
        <input type="submit" name="submit" value="Volgende" />


    </form>
</body>
</html>