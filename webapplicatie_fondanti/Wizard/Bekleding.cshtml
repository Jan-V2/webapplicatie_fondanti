@{
    if (IsPost)
    {
        Session["taartsoort"] = Request.Form["taartsoort"];
        Session["bekleding"] = Request.Form["bekleding"];
        Session["vulling"] = Request.Form["vulling"];
        Session["decoratieniveau"] = Request.Form["decoratieniveau"];
        Response.Redirect("/Wizard/Allergieen.cshtml");
    }
    var db = new Db_Stuff.Mssql_Taarten_Data();
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @helpers.wizard.materialized_header()
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a href="#!" class="brand-logo center"></a>
            <ul class="left hide-on-med-and-down">
                <li><a href="~/Wizard/Aantalpersonen.cshtml">Aantal personen</a></li>
                <li><a href="~/Wizard/Aantallagen.cshtml">Aantal lagen</a></li>
                <li><a href="~/Wizard/Thema.cshtml">Thema</a></li>
                <li class="active"><a href="#">Bekleding</a></li>
                <li><a href="#">Allergieën</a></li>
                <li><a href="#">Overzicht</a></li>

            </ul>
        </div>
    </nav>
    <form method="post" class="breed">
        @helpers.wizard.type_cake_select(db, Session["taartsoort"] as string)
        @helpers.wizard.bekleding_select(db, Session["bekleding"] as string)
        @helpers.wizard.vulling_select(db, Session["vulling"] as string)
        @helpers.wizard.niv_decoratie_select(db, Session["decoratieniveau"] as string)

        <input type="submit" name="submit" value="Volgende" />
    </form>
</body>
</html>